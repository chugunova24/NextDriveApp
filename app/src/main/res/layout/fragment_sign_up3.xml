<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpFragment3">

    <ImageButton
        android:id="@+id/attach_avatar"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/avatar"

        app:layout_constraintBottom_toTopOf="@id/avatar_advice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_add_circle_24"

        app:layout_constraintBottom_toBottomOf="@id/attach_avatar"
        app:layout_constraintEnd_toEndOf="@id/attach_avatar" />

    <TextView
        android:id="@+id/avatar_advice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/avatar_advice"
        android:textSize="13sp"

        app:layout_constraintBottom_toTopOf="@id/edit_driver_license"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/montserrat_medium"
        android:labelFor="@id/edit_driver_license"
        android:text="@string/driver_license_number"

        app:layout_constraintBottom_toTopOf="@id/edit_driver_license"
        app:layout_constraintStart_toStartOf="@id/edit_driver_license" />

    <EditText
        android:id="@+id/edit_driver_license"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/edit_text_border"
        android:fontFamily="@font/montserrat_medium"
        android:hint="0000000000"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:textSize="14sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/montserrat_medium"
        android:labelFor="@id/edit_license_date"
        android:text="@string/driver_license_date"

        app:layout_constraintBottom_toTopOf="@id/edit_license_date"
        app:layout_constraintStart_toStartOf="@id/edit_license_date" />

    <EditText
        android:id="@+id/edit_license_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_text_border"
        android:drawableStart="@drawable/calendar_days"
        android:drawablePadding="10dp"
        android:fontFamily="@font/montserrat_medium"
        android:hint="DD/MM/YYYY"
        android:inputType="date"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:paddingEnd="35dp"
        android:textSize="14sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_driver_license"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/montserrat_medium"
        android:labelFor="@id/image_driver_license"
        android:text="@string/upload_driver_license_image"

        app:layout_constraintBottom_toTopOf="@id/image_driver_license"
        app:layout_constraintStart_toStartOf="@id/image_driver_license" />

    <ImageButton
        android:id="@+id/image_driver_license"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_text_border"
        android:src="@drawable/upload"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_license_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:paddingHorizontal="20dp"
        android:text="@string/upload_image"

        app:layout_constraintBottom_toBottomOf="@id/image_driver_license"
        app:layout_constraintStart_toEndOf="@id/image_driver_license"
        app:layout_constraintTop_toTopOf="@id/image_driver_license" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/montserrat_medium"
        android:labelFor="@id/image_passport"
        android:text="@string/upload_image_passport"

        app:layout_constraintBottom_toTopOf="@id/image_passport"
        app:layout_constraintStart_toStartOf="@id/image_passport" />

    <ImageButton
        android:id="@+id/image_passport"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_text_border"
        android:src="@drawable/upload"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_driver_license" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:paddingHorizontal="20dp"
        android:text="@string/upload_image"

        app:layout_constraintBottom_toBottomOf="@id/image_passport"
        app:layout_constraintStart_toEndOf="@id/image_passport"
        app:layout_constraintTop_toTopOf="@id/image_passport" />

</androidx.constraintlayout.widget.ConstraintLayout>